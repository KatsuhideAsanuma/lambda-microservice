# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lambda_microservice
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgres://postgres:postgres@postgres:5432/lambda_microservice

# Redis configuration
REDIS_URL=redis://redis:6379
REDIS_CACHE_URL=redis://redis:6379

# Controller configuration
HOST=0.0.0.0
PORT=8080

# Runtime configuration
NODEJS_RUNTIME_URL=http://nodejs-runtime:8081
PYTHON_RUNTIME_URL=http://python-runtime:8082
RUST_RUNTIME_URL=http://rust-runtime:8083
RUNTIME_TIMEOUT_SECONDS=30
RUNTIME_FALLBACK_TIMEOUT_SECONDS=15
RUNTIME_MAX_RETRIES=3
MAX_SCRIPT_SIZE=1048576
WASM_COMPILE_TIMEOUT_SECONDS=60
OPENFAAS_GATEWAY_URL=http://gateway.openfaas:8080
RUNTIME_SELECTION_STRATEGY=PrefixMatching
CACHE_TTL_SECONDS=3600

# Session configuration
SESSION_EXPIRY_SECONDS=3600

# Kubernetes configuration (for local development with Minikube/Kind)
KUBERNETES_NAMESPACE=lambda-microservice
